Bootstrap: docker
From: ubuntu:20.04
%post
  apt -qy update
  apt -qy install cmake
  apt install -y pkg-config
  apt install -y g++ 

  apt -qy clean

%runscript
  # we're running in the build directory -- create a sub-build
  cd /mnt/build
  mkdir -p ubuntu20r04-build
  cd ubuntu20r04-build
  pwd
  echo "Hey there" > foo.tmp
  cmake -DBUILD_DEB=1 -DCMAKE_INSTALL_PREFIX=/usr ../../
  make
  ctest

  make package

%help
  This builds SoDaUtils, runs the tests, and builds a deb package
